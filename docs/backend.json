{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the SpendWise application.",
      "properties": {
        "email": {
          "type": "string",
          "description": "User's email address.",
          "format": "email"
        },
        "displayName": {
          "type": "string",
          "description": "User's display name."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The date and time the user account was created."
        }
      },
      "required": [
        "email",
        "createdAt"
      ]
    },
    "Expense": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Expense",
      "type": "object",
      "description": "Represents an expense record.",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user who owns this expense."
        },
        "amount": {
          "type": "number",
          "description": "The amount of the expense."
        },
        "date": {
          "type": "string",
          "description": "The date of the expense.",
          "format": "date-time"
        },
        "description": {
          "type": "string",
          "description": "Description of the expense."
        },
        "category": {
          "type": "string",
          "description": "The category of the expense."
        }
      },
      "required": [
        "userId",
        "amount",
        "date",
        "description",
        "category"
      ]
    },
    "Budget": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Budget",
      "type": "object",
      "description": "Represents a budget for an expense category.",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user who owns this budget."
        },
        "category": {
          "type": "string",
          "description": "The expense category for this budget."
        },
        "amount": {
          "type": "number",
          "description": "The budget amount."
        }
      },
      "required": [
        "userId",
        "category",
        "amount"
      ]
    },
    "FuturePlan": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "FuturePlan",
      "type": "object",
      "description": "Represents a planned future expenditure.",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user who owns this plan."
        },
        "description": {
          "type": "string",
          "description": "Description of the planned expense."
        },
        "amount": {
          "type": "number",
          "description": "The planned amount of the expense."
        },
        "category": {
          "type": "string",
          "description": "The category of the planned expense."
        },
        "targetDate": {
          "type": "string",
          "description": "The target date for the expense.",
          "format": "date-time"
        }
      },
      "required": [
        "userId",
        "description",
        "amount",
        "category",
        "targetDate"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/User"
      },
      "description": "Stores user profile information."
    },
    "/users/{userId}/expenses/{expenseId}": {
      "schema": {
        "$ref": "#/entities/Expense"
      },
      "description": "Stores individual expense records for each user."
    },
    "/users/{userId}/budgets/{categoryId}": {
      "schema": {
        "$ref": "#/entities/Budget"
      },
      "description": "Stores budget information for each user, with one document per category."
    },
    "/users/{userId}/futurePlans/{planId}": {
      "schema": {
        "$ref": "#/entities/FuturePlan"
      },
      "description": "Stores future planned expenditures for each user."
    }
  }
}
